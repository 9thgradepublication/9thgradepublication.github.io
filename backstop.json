{
  "id": "backstop_default",
  "viewports": [
    {
      "label": "micro",
      "width": 315,
      "height": 800
    },
    {
      "label": "small",
      "width": 400,
      "height": 800
    },
    {
      "label": "midrange",
      "width": 625,
      "height": 800
    },
    {
      "label": "large",
      "width": 830,
      "height": 800
    },
    {
      "label": "larger",
      "width": 1000,
      "height": 800
    }
